{
    "format_version": "1.10.0",
    "minecraft:attachable": {
        "description": {
            "identifier": "crystalized:item_knockoff_boxing_glove",
            "materials": {
                "default": "entity_alphatest_one_sided",
                "enchanted": "entity_alphatest_one_sided"
            },
            "textures": {
                "default": "textures/crystalized/item/knockoff_boxing_glove",
                "enchanted": "textures/misc/enchanted_item_glint"
            },
            "geometry": {
                "default": "geometry.item.knockoff_boxing_glove"
            },
            "scripts": {
                "pre_animation": [
                    "v.main_hand = c.item_slot == 'main_hand';",
                    "v.off_hand = c.item_slot == 'off_hand';",
                    "v.head = c.item_slot == 'head';"
                ],
                "animate": [
                    {
                        "thirdperson_main_hand": "v.main_hand && !c.is_first_person"
                    },
                    {
                        "thirdperson_off_hand": "v.off_hand && !c.is_first_person"
                    },
                    {
                        "thirdperson_head": "v.head && !c.is_first_person"
                    },
                    {
                        "firstperson_main_hand": "v.main_hand && c.is_first_person"
                    },
                    {
                        "firstperson_off_hand": "v.off_hand && c.is_first_person"
                    },
                    {
                        "firstperson_head": "c.is_first_person && v.head"
                    }
                ]
            },
            "animations": {
                "thirdperson_main_hand": "animation.item.knockoff_boxing_glove.thirdperson_mainhand",
                "thirdperson_off_hand": "animation.item.knockoff_boxing_glove.thirdperson_mainhand",
                "thirdperson_head": "animation.geyser_custom.disable",
                "firstperson_main_hand": "animation.item.knockoff_boxing_glove.firstperson_mainhand",
                "firstperson_off_hand": "animation.item.knockoff_boxing_glove.firstperson_mainhand",
                "firstperson_head": "animation.geyser_custom.disable"
            },
            "render_controllers": [
                "controller.render.item_default"
            ]
        }
    }
}